{
	"compilerOptions": {
		/* Modules */
		"rootDir": "./src",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"removeComments": true,
		"newLine": "lf",

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"useUnknownInCatchVariables": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowUnusedLabels": false,
		"skipLibCheck": true
	},
	"include": ["./src"],
	"exclude": ["/node_modules", "./dist"]
}
