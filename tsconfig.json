{
	"compilerOptions": {
		"target": "ES5",
		"lib": ["ESNext"],

		/* Modules */
		"rootDir": "./src",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"removeComments": true,
		"newLine": "lf",

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"useUnknownInCatchVariables": false,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowUnusedLabels": false /* Skip type checking .d.ts files that are included with TypeScript. */,
		"skipLibCheck": true /* Skip type checking all .d.ts files. */
	},
	"exclude": ["/node_modules", "dist"]
}
